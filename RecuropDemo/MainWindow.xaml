<Window x:Class="RecuropDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecuropDemo"
        mc:Ignorable="d"
        Title="Recurop Demo" Height="200" Width="300">

    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="{Binding DisplayTime}" FontSize="35" HorizontalContentAlignment="Center" />
        <StackPanel Orientation="Horizontal">
            <Button Command="{Binding StartCommand}" IsEnabled="{Binding MyRecurringOperation.IsIdle}" Margin="10,10,10,10" Content="Start" />
            <Button Command="{Binding StopCommand}" IsEnabled="{Binding MyRecurringOperation.IsRecurring}" Margin="10,10,10,10" Content="Stop" />
            <Button Command="{Binding ContinueCommand}" IsEnabled="{Binding MyRecurringOperation.IsStopped}" Margin="10,10,10,10" Content="Continue" />
            <Button Command="{Binding CancelCommand}" IsEnabled="{Binding MyRecurringOperation.IsRecurring}" Margin="10,10,10,10" Content="Cancel" /> 
        </StackPanel>
    </StackPanel>
</Window>
